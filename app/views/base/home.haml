%head
  / Stylesheets /
  = stylesheet_link_tag("gumby")
  = stylesheet_link_tag("style")
  = stylesheet_link_tag("sequencejs-theme.modern-slide-in.css")
  = javascript_include_tag("libs/modernizr-2.6.2.min")

%body
  / SLIDER ###############################################
  %section#header
    .sequence-theme
      #sequence
        %ul.sequence-canvas
          / SEQUENCE 1
          %li.animate-in
            %h2.title Sabar Dasgupta
            %h3.subtitle
              Developer and Entrepreneur
              %br/
              %a{href: "resume.pdf", style: "font-size:14px; letter-spacing:0.5px"} resume
              %p{style: "display:inline; font-weight:bold; font-size:14px"} Â·
              %a{href: "mailto:sabar@chesscademy.com", style: "font-size:14px; letter-spacing:0.5px"} email
            = image_tag("model1.png", :class => "model")

  / END SLIDER ###############################################
  / SECTION PROJECTS ###############################################
  %section#projects
    / TITLE
    /
      .row
        .twelve.columns.left
          %h2{style: "font-size:24px; "}
            Projects
    / ROW
    #projects_grid.row
      / DATA FILER
      %ul.items.three_up.tiles.centered
        / PROJECTS 1
        %li.item.print
          %a.lightbox{href: "http://challengepost.com/sabard"}
            = image_tag("projects/1.png")
            %div
              %h5
                Hackathons
                %span 11 winning hacks at prestigious events
        / PROJECTS 2
        %li.item.print
          %a.lightbox{href: "http://chesscademy.com"}
            = image_tag("projects/2.png")
            %div
              %h5
                Chesscademy
                %span A fun and free way to learn chess
        / PROJECTS 3
        %li.item.webdesign
          %a.lightbox{href: "https://angel.co/orchive"}
            = image_tag("projects/3.png")
            %div
              %h5
                Orchive
                %span Crowdsourced Journalism
  .row.social
    .twelve.columns.centered
      %a{href: "https://twitter.com/sabardasgupta", target: "_blank"}
        %i.icon-twitter
      %a{href: "https://github.com/sabard", target: "_blank"}
        %i.icon-github
      %a{href: "http://www.linkedin.com/in/sabar", target: "_blank"}
        %i.icon-linkedin
  / END SECTION PROJECTS ###############################################
  %section#copyright{style: "background-color:rgb(54,63,72); color:white; letter-spacing:0.5px "}

  / END FOOTER ###############################################
  / JAVASCRIPTS
  = javascript_include_tag("main")
  / Main JS File
  = javascript_include_tag("jquery.lazyload.js")
  / LazyLoad for img
  = javascript_include_tag("jquery.hoverdir.min.js")
