%head
  / Stylesheets /
  = stylesheet_link_tag("gumby")
  = stylesheet_link_tag("style")
  = stylesheet_link_tag("sequencejs-theme.modern-slide-in.css")
  = javascript_include_tag("libs/modernizr-2.6.2.min")
%body
  / SLIDER ###############################################
  %section#header
    .sequence-theme
      #sequence
        %ul.sequence-canvas
          / SEQUENCE 1
          %li.animate-in
            %h2.title Sabar Dasgupta
            %h3.subtitle
              I'm a teen entrepreneur, developer, and tinkerer.
              %br/
              %a{href: "#"} Download Resume
            = image_tag("model1.png", :class => "model")
  / END SLIDER ###############################################
  / SECTION PROJECTS ###############################################
  %section#projects
    / TITLE
    .row
      .twelve.columns.left
        %h2{style: "font-size:24px; "}
          Projects
    / ROW
    #projects_grid.row
      / DATA FILER
      %ul.items.three_up.tiles.centered
        / PROJECTS 1
        %li.item.print
          %a.lightbox{href: "#"}
            = image_tag("other/2big.png")
            %div
              %h5
                Chesscademy
                %span A fun and free way to learn chess
        / PROJECTS 2
        %li.item.print
          %a.lightbox{href: "#"}
            = image_tag("other/4big.png")
            %div
              %h5
                Silkspeak
                %span Learn to speak like a champion
        / PROJECTS 3
        %li.item.webdesign
          %a.lightbox{href: "#"}
            = image_tag("other/1big.png")
            %div
              %h5
                Artemis
                %span Your personal health monitor
  .row.social
    .twelve.columns.centered
      %a{href: "#", target: "_blank"}
        %i.icon-twitter
      %a{href: "#", target: "_blank"}
        %i.icon-github
      %a{href: "#", target: "_blank"}
        %i.icon-linkedin
  / END SECTION PROJECTS ###############################################
  %section#copyright{style: "background-color:rgb(54,63,72); color:white; letter-spacing:0.5px "}
    / COPYRIGHT LINE
    .row
      .twelve.columns.centered
        %p Copyright Â© 2013 Sabar Dasgupta.
  / END FOOTER ###############################################
  / JAVASCRIPTS
  = javascript_include_tag("main")
  / Main JS File
  = javascript_include_tag("jquery.lazyload.js")
  / LazyLoad for img
  = javascript_include_tag("jquery.hoverdir.min.js")
  / Portfolio Hover Effect
